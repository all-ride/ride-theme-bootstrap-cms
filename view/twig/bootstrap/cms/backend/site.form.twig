{% extends 'cms/backend/index' %}
{% import "base/taskbar" as functions %}


{%  block head_title %}{% if node.getId() is defined %}{{ translate("title.site.edit") }}{% else %}{{translate("title.site.add") }}{% endif %} - {{ parent() }}{% endblock %}

{% block taskbar_panels %}
    {{ parent() }}
    {% if node.getId() %}
        {{ url("cms.site.edit", {"locale": "%locale%", "site": node.getId()}, "url") }}
    {% else %}
        {{ url("cms.site.add", {"locale": "%locale%"}, "url") }}
    {% endif %}
    {{ functions.taskbarPanelLocales(url, locale, locales) }}
{% endblock %}

{% block content_title %}
    {{ parent() }}
    <div class="page-header">
        {% if node.getId() %}
            <h1>{{ node.getName(locale) }} <small>{{ translate("title.site.edit") }}</small></h1>
        {% else %}
            <h1>{{ translate("title.site.add") }}</h1>
        {% endif %}
    </div>
{% endblock %}


{% block content_body %}
    {{ parent() }}
    {% import "base/form.prototype" as formPrototype %}

    <form id="{{ form.getId() }}" class="form-horizontal" action="{{ app.url.request }}" method="POST" role="form">
        <fieldset>
            {{ formPrototype.formRows(null, form) }}

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" class="btn btn-default" value="{{ translate("button.save") }}" />
                    {% if referer %}
                        <a href="{{ referer }}" class="btn">{{ translate("button.cancel") }}</a>
                    {% endif %}
                </div>
            </div>
        </fieldset>
    </form>
    {{ dump() }}
{% endblock content_body %}
