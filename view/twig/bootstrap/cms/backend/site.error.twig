{% extends 'cms/backend/index' %}
{% import "base/taskbar" as functions %}

{%  block head_title %}{{ translate("title.site.error") }} - {{ site.getName(locale) }} - {{ parent() }}{% endblock %}

{% block taskbar_panels %}
    {{ parent() }}
    {{ url("cms.site.error", {"locale": "%locale%", "site": site.getId(), "node": site.getId()}, url) }}
    {{ functions.taskbarPanelLocales(url, locale, locales) }}
{% endblock taskbar_panels %}

{% block content_title %}
    {{ parent() }}
    <div class="page-header">
        <h1>{{ site.getName(locale) }} <small>{{ translate("title.site.error") }}</small></h1>
    </div>
{% endblock content_title %}

{% block content_body %}
    {{ parent() }}
    {% import "base/form.prototype" as formPrototype %}

    <p>{{ translate("label.node.action.error.intro") }}</p>
    <form id="{{ form.getId() }}" action="{{ app.url.request }}" method="POST" role="form">
        <fieldset>
            {{ formPrototype.formRows(null, form) }}
            {# {call formRows form=$form} #}

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" class="btn btn-default" value="{{ translate("button.save") }}" />
                    {% if referer %}
                        <a href="{$referer}" class="btn">{{ translate("button.cancel") }}</a>
                    {% endif %}
                </div>
            </div>
        </fieldset>
    </form>
{% endblock content_body %}
