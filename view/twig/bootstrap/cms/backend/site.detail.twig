{% extends 'cms/backend/index' %}
{% import "base/taskbar" as functions %}

{%  block head_title %}{{ site.getName(locale) }} - {{ parent() }}{% endblock %}

{% block taskbar_panels %}
    {{ parent() }}
    {{ url("cms.site.detail.locale", {"locale": "%locale%", "site": site.getId()}, url) }}
