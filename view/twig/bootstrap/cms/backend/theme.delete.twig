{% extends 'cms/backend/index' %}

{% block head_title %}{{ translate("title.theme.delete") }} - {{ theme.getDisplayName }} - {{ parent() }}{% endblock %}

{% block content_title %}
    {{ parent() }}
    <div class="page-header">
        <h1>{{ theme.getDisplayName }} <small>{{ translate("title.theme.delete") }}</small></h1>
    </div>
{% endblock content_title %}


{% block content_body %}
    {{ parent() }}
    {% import "base/form.prototype" as formPrototype %}


    <form action="{{ app.url.request }}" method="POST" role="form">
        <div class="form__group">
            {# <p>{translate key="label.confirm.theme.delete" theme=$()}</p> #}
            {{ translate("label.confirm.theme.delete", {theme: theme.getDisplayName()}) }}
        </div>

        <div class="form__group">
            <input type="submit" class="btn btn--default" value="{{ translate("button.theme.delete") }}" />
            {% if referer %}
                <a href="{{ referer }}" class="btn">{{ translate("button.cancel") }}</a>
            {% endif %}
        </div>
    </form>
{% endblock content_body %}
