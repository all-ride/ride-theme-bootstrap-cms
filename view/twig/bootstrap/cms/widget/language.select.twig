<div class="widget widget-language-select {{ app.cms.properties.getWidgetProperty('style.container') }}" id="widget-{{ app.cms.widget }}">
    <ul class="locales">
        {% for code, data in locales %}
            {% set locale = data.locale %}
            <li{% if code == app.locale %} class="active"{% endif %}><a href="{{ data.url }}">{{ locale.getName() }}</a></li>
        {% endfor %}
    </ul>
</div>
