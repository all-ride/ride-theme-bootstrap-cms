<div class="widget widget-overview-list {{ app.cms.properties.getWidgetProperty('style.container') }}" id="widget-{{ app.cms.widget }}">
    {% if title %}
        <h3 class="{{ app.cms.properties.getWidgetProperty('style.title') }}">{{ title }}</h3>
    {% endif %}


    {% if result %}
        <ul>
            {% for content in result %}
                <div class="content clearfix {( cycle("odd,even") }}">
                    <li>{% if content.url %}<a href="{{ content.url }}">{{ content.title }}</a>{% else %}{{ content.title }}{% endif %}</li>
                </div>
            {% endfor %}
        </ul>

        {% if pagination %}
            {{ pagination href=pagination.getHref() pages=pagination.getPages() page=pagination.getPage() }}
        {% endif %}

        {% if moreUrl %}
            <a href="{{ moreUrl }}" class="more">{{ moreLabel }}</a>
        {% endif %}
    {% else %}
        <p>{{ emptyResultMessage|text }}</p>
    {% endif %}
</div>
